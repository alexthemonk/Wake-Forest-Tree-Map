  	<script type="text/javascript" src="./Leaflet.GoogleMutant.js"></script>


    <meta charset="utf-8">
    <title>{{ title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link rel="stylesheet" href="https://cdn.leafletjs.com/leaflet-0.3.1/leaflet.css" />
    <!-- the css file is linked to other website, may change later -->
    <!-- <script src="http://cdn.leafletjs.com/leaflet-0.3.1/leaflet.js"></script>
    <script src="http://maps.google.com/maps/api/js?v=3.2&sensor=false"></script>
    <script src="http://matchingnotes.com/javascripts/leaflet-google.js"></script>  -->

  </head>


  <body>

    <div id="wrapper">
      <!-- <div id="map" style="width:500px; height:500px" ></div> -->
      <!-- top nav bar -->
      <div id="navigation bar" class="navbar">
        <div id="navigation bar buttons">
          <ul>
            <li> <a href="/">Home</a> </li>
            <li> <a href="/users/addTree">Add a Tree</a> </li>
          </ul>
        </div>
      </div>

      <!-- logo and search -->
      <div id="logo and search" class="black_back">
        <div class="logo" id="logo">
          <a href="/">
            <img id="site-logo" src="/image/WFU_logo.png" height=70px width=210px alt="WakeForestUniversity">
          </a >
        </div>
        <div id = "search" class="search">
          <form action="/users/search" method="post">
            <input type="text" placeholder="Tree Name..." style="margin-top: 4px; float: right;">
            <br>
            <input type="submit" value="Search" style="margin-top: 4px; float: right;">
          </form>
        </div>
      </div>

      <!-- sub header -->
      <div id="sub header"></div>
      <div id="export-panel" class="modal fade"></div>

      <div id="map content" class="main">
        <div id="streetview" style="display: none"></div>

        <div id="map" class="map" data-has-boundaries = "False" data-has-polygons = "False">
        </div>
        <script type="text/javascript">
        //function initMap(){
          var map = new L.Map('map', {center: new L.LatLng(36.1352, -80.2763), zoom: 16});

              //map types
          var roadMutant = L.gridLayer.googleMutant({
            maxZoom: 24,
            type:'roadmap'
          }).addTo(map);
          var satMutant = L.gridLayer.googleMutant({
            maxZoom: 24,
            type:'satellite'
          });
          var hybridMutant = L.gridLayer.googleMutant({
            maxZoom: 24,
            type:'hybrid'
          });

          L.control.layers({
            Roadmap: roadMutant,
            Aerial: satMutant,
            Hybrid: hybridMutant,
          }, {}, {
            collapsed: false
          }).addTo(map);

          // markers
          var kyiv = [36.1352, -80.2763]


          var marker1 = L.marker(kyiv).addTo(map)
        //}
        </script>


        <div id="sidebar" class="sidebar">
          <h1>Info</h1>
          <button onclick="treeInfo('infoBar')" class="left-align green">Tree Information</button>
          <div id="infoBar" class="hide">
            <p class="panel">Tree Info to be shown here </p>
          </div>
          <button onclick="generalInfo('generalBar')" class="left-align blue">Website</button>
          <div id="generalBar" class="hide">
            <p class="panel">Other info to be shown here </p>
          </div>
          <script>
          function treeInfo(id) {
              var x = document.getElementById(id);
              if (x.className.indexOf("show") == -1) {
                  x.className += " show";
              }
              else {
                  x.className = x.className.replace(" show", "");
              }
          }

          function generalInfo(id) {
              var x = document.getElementById(id);
              if (x.className.indexOf("show") == -1) {
                  x.className += " show";
              }
              else {
                  x.className = x.className.replace(" show", "");
              }
          }
          </script>
        </div><!--side bar-->
      </div>
    </div>
  </body>


</html>
